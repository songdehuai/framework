<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowDisablePreview">false</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/main</item>
    </style>

    <style name="Theme.Framework" parent="Theme.Base">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:colorPrimary">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
        <item name="android:colorPrimaryDark">@color/main</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:colorControlHighlight">@color/main</item>
        <item name="android:colorControlNormal">@color/main_normal</item>
        <item name="backgroundColor">@color/main_bg</item>
    </style>


    <style name="LoadDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:colorPrimary">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
        <item name="android:colorPrimaryDark">@color/main</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="android:colorControlHighlight">@color/main</item>
        <item name="android:windowBackground">@color/backgroundColor_2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">@color/backgroundColor_2</item>
        <item name="android:textColor">@color/backgroundColorReverse_1</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.Framework_NoFull" parent="Theme.Framework">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <style name="DialogActivity" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>